# shellcheck disable=SC2148
# shellcheck disable=SC2121
set shell=/bin/fish

syntax on
filetype indent on
colorscheme desert

encoding utf-8
shiftwidth 4
tabstop 4
softtabstop 4
backspace indent,eol,start

set number
set ruler
set wildmenu
set showcmd
set showmatch
set cursorline
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
