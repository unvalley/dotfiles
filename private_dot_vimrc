set shell=/bin/fish

syntax on
filetype indent on
colorscheme desert

set encoding=utf-8
set shiftwidth=4
set tabstop=4
set softtabstop=4
set backspace=indent,eol,start

set number
set ruler
set wildmenu
set showcmd
set showmatch
set cursorline
set hlsearch
set incsearch
set ignorecase
set smartcase
set autoindent
